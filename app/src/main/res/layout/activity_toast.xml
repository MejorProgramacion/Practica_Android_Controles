<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ToastActivity">

    <Button
        android:id="@+id/BtnToastNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast Normal"
        />

    <Button
        android:id="@+id/BtnToastGravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast con gravity"/>

    <Button
        android:id="@+id/BtnToastCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast personalizado"/>

    <Button
        android:id="@+id/BtnToastCustom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast personalizado icono"/>

</LinearLayout>